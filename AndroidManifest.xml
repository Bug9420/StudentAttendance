<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.GCWF.StudentAttendance"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-sdk android:minSdkVersion="11"/>
    <application android:label="@string/app_name" android:icon="@drawable/icon">
        <activity android:name="SplashActivity"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="CourseAvtivity"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:label="@string/actionbar_label"
                ></activity>

        <activity android:name="ClassesActivity"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:label="@string/classes_label"
                  ></activity>

        <activity android:name=".AddCourseActivity"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:label="课程"></activity>

        <activity android:name=".ShowCourseActivity"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:label="课程"></activity>

        <activity android:name="GuideActivity"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:label="引导">
        </activity>

        <activity android:name="FileActivity"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:label="浏览">
        </activity>
        <activity android:name=".MainActivity"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>

        <activity android:name=".RollCallActivity"
                  android:theme="@android:style/Theme.Holo.Light"
                  android:label="测试">
        </activity>
        <activity android:name=".TestActivity"/>
    </application>
</manifest>
